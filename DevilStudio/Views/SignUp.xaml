        <!--
                        <Span Text="Privacy Policy"
                      FontSize="16"
                      TextColor="Blue">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnPrivacyPolicyTapped" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>-->
    </Grid>
</ContentPage>
